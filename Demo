‚úÖ 5. Send_email.sh

(Final version with dynamic variables)

#!/bin/bash

LOGS_PATH=$1
CURRENT_LOG_PATH=$2
EMAIL_RECIPIENT=$3
CI_PIPELINE_URL=$4

EMAIL_BODY="<html><body>"
EMAIL_BODY+="<h2 style='color:#2E86C1;'>üì¢ SAS Viya CI/CD Pipeline Report</h2>"
EMAIL_BODY+="<p>Pipeline: <a href='$CI_PIPELINE_URL'>$CI_PIPELINE_URL</a></p>"
EMAIL_BODY+="<table border='1' cellpadding='8' cellspacing='0' style='border-collapse:collapse;font-family:Arial;'>"
EMAIL_BODY+="<tr style='background-color:#f2f2f2;'>
              <th>Stage</th>
              <th style='color:green;'>‚úÖ Passed</th>
              <th style='color:red;'>‚ùå Failed</th>
              <th>Total</th>
            </tr>"

for stage in lint convert run test deploy; do
    pass_file="$CURRENT_LOG_PATH/${stage}_passed.txt"
    fail_file="$CURRENT_LOG_PATH/${stage}_failed.txt"

    pass_count=$( [ -f "$pass_file" ] && grep -c . "$pass_file" || echo 0 )
    fail_count=$( [ -f "$fail_file" ] && grep -c . "$fail_file" || echo 0 )
    total_count=$((pass_count + fail_count))

    EMAIL_BODY+="<tr>
                    <td><b>${stage^}</b></td>
                    <td>$pass_count</td>
                    <td>$fail_count</td>
                    <td>$total_count</td>
                 </tr>"
done

EMAIL_BODY+="</table>"
EMAIL_BODY+="<p>Check details at: <a href='$CI_PIPELINE_URL'>$CI_PIPELINE_URL</a></p>"
EMAIL_BODY+="<hr><p style='font-size:small;color:gray;'>This report was generated automatically by SAS Viya pipeline.</p>"
EMAIL_BODY+="</body></html>"

echo "$EMAIL_BODY" | mailx -a "Content-Type: text/html" -s "üìä SAS Viya Pipeline Report" "$EMAIL_RECIPIENT"
echo "‚úÖ Email sent to $EMAIL_RECIPIENT"


---
deploy:
  stage: deploy
  script:
    - echo "üöö Starting Deployment for $GROUP_NAME/$APP_NAME ..."
    - |
      ssh $SERVER_USER@$SERVER_HOST bash -c "'
        set -e

        echo \"üì¶ Reading test_passed.txt for deployment...\"
        TEST_PASSED_FILE=\"$LOGS_PATH/pipeline_logs/$TIMESTAMP/test_passed.txt\"
        DEPLOY_PASSED_FILE=\"$LOGS_PATH/pipeline_logs/$TIMESTAMP/deployment_passed.txt\"
        DEPLOY_FAILED_FILE=\"$LOGS_PATH/pipeline_logs/$TIMESTAMP/deployment_failed.txt\"

        if [[ ! -f \"\$TEST_PASSED_FILE\" ]]; then
          echo \"‚ùå No test_passed.txt found. Deployment aborted.\"
          exit 1
        fi

        BACKUP_TIME=\$(date +'%Y%m%d_%H%M%S')
        DEPLOYED_COUNT=0
        FAILED_COUNT=0

        echo \"üìù Initializing deployment logs...\"
        > \"\$DEPLOY_PASSED_FILE\"
        > \"\$DEPLOY_FAILED_FILE\"

        while IFS= read -r job; do
          if [[ -f \"$VIYA_CODE_PATH/\$job\" ]]; then
            echo \"üóÑ Backing up \$job to Viya_backup_code/\"
            cp \"$VIYA_CODE_PATH/\$job\" \"$BACKUP_PATH/\${job%.sas}_\${BACKUP_TIME}.sas\"

            echo \"üìÇ Moving \$job to Prod/Viya_code/\"
            mv \"$VIYA_CODE_PATH/\$job\" \"$PROD_PATH/Viya_code/\"

            echo \"‚úÖ Deployed: \$job\"
            echo \"\$job\" >> \"\$DEPLOY_PASSED_FILE\"
            DEPLOYED_COUNT=\$((DEPLOYED_COUNT + 1))
          else
            echo \"‚ùå Deployment failed: \$job not found in Viya_code.\"
            echo \"\$job\" >> \"\$DEPLOY_FAILED_FILE\"
            FAILED_COUNT=\$((FAILED_COUNT + 1))
          fi
        done < \"\$TEST_PASSED_FILE\"

        echo \"üßπ Cleaning up Viya_code folder in Discovery...\"
        rm -rf \"$VIYA_CODE_PATH\"/*

        echo \"‚úÖ Deployment completed.\"
        echo \"‚úîÔ∏è Total Deployed: \$DEPLOYED_COUNT\"
        echo \"‚ùå Total Failed Deployments: \$FAILED_COUNT\"
      '"
  rules:
    - if: '$CI_COMMIT_BRANCH == "main"'
---------------



stages:
  - lint
  - convert
  - run-viya
  - test
  - deploy

lint:
  stage: lint
  script:
    - echo "üîç Linting SAS9 code for $GROUP_NAME/$APP_NAME ..."
    - |
      ssh -tt $SERVER_USER@$SERVER_HOST "
        set -o pipefail
        python3 -u $SCRIPTS_PATH/Lint_sas_code.py \
          \"$DISCOVERY_PATH/Main.sas\" \
          \"$SAS9_CODE_PATH\"
      "
  rules:
    - if: '$CI_COMMIT_BRANCH == "dev"'

convert:
  stage: convert
  script:
    - echo "üîÑ Converting SAS9 code to Viya for $GROUP_NAME/$APP_NAME ..."
    - |
      ssh -tt $SERVER_USER@$SERVER_HOST "
        set -o pipefail
        rm -rf \"$VIYA_CODE_PATH\"/*
        python3 -u $SCRIPTS_PATH/Convert_sas9_to_viya.py \
          \"$SAS9_CODE_PATH\" \
          \"$VIYA_CODE_PATH\"
      "
  rules:
    - if: '$CI_COMMIT_BRANCH == "dev"'

# Similarly add -tt and -u to other stages

----------
email:
  stage: email
  script:
    - echo "üìß Sending SAS Viya Pipeline Email Report for $GROUP_NAME/$APP_NAME ..."
    - |
      ssh $SERVER_USER@$SERVER_HOST bash -c "'
        set -e

        echo \"üîÑ Fetching log data for email...\"
        EMAIL_SCRIPT_PATH=\"$SCRIPTS_PATH/send_email.sh\"
        LOGS_PATH=\"$LOGS_PATH\"
        CURRENT_LOG_PATH=\"$LOGS_PATH/pipeline_logs/$TIMESTAMP\"
        EMAIL_RECIPIENT=\"$EMAIL_RECIPIENT\"
        CI_PIPELINE_URL=\"$CI_PIPELINE_URL\"

        echo \"üöÄ Running send_email.sh on server...\"
        bash \"\$EMAIL_SCRIPT_PATH\" \"\$LOGS_PATH\" \"\$CURRENT_LOG_PATH\" \"\$EMAIL_RECIPIENT\" \"\$CI_PIPELINE_URL\"
      '"
  rules:
    - when: always
